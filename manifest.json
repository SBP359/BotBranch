{
  "manifest_version": 3,
  "name": "BotBranch",
  "version": "1.0",
  "description": "Branch conversations between ChatGPT, Gemini, and DeepSeek.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*"
  ],
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "chatgpt-script.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "gemini-script.js"
      ],
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://chat.deepseek.com/*"
      ],
      "js": [
        "deepseek-script.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "geminilogo.png",
        "ChatGPT.png",
        "deepseek.png"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}